<%- include('header') -%> <%- include('navbar', {isAuthenticated: true}) %>
<div>
  <div class="container">
    <div class="row p-5 justify-content-center">
      <div
        class="
          col-4
          border border-1 border-dark
          justify-content-center
          text-center
        "
      >
        <h2 class="text-dark mt-1">
          <p>TODAYâ€™S EVENTS</p>
        </h2>

        <div id="todays_events">
          <% todays.forEach(element => { %> 
            <%- include('common_event_card',{event: element, isToday: true, isFavorite: element.isFavorite}) %> 
          <% }); %>
        </div>
      </div>
      <!-- THIS IS THE END OF ONE EVENT CARD -->
      <div
        class="
          col-8
          border border-1 border-dark
          justify-content-center
          text-center
        "
      >
        <div class="d-flex mb-3 mt-1">
          <form method="post" class="col-12 d-flex">
            <input
            class="float-start form-control mr-sm-1 border-warning"
            type="search"
            name="event_search"
            placeholder="Search for events..."
            aria-label="Search"
            />
            <button type="submit" class="mx-2 btn btn-light">SEARCH</button>
            <div>
              <a type="button" class="btn btn-warning float-end " href="/events/add">
                ADD EVENT
              </a>
            </div>
          </form>
       
        </div>
      

        <div id="all_events" class="d-flex flex-wrap">
          <% filtered_events.forEach(function(item){ %>
            <%- include('common_event_card', {event: item, isToday: false, isFavorite:item.isFavorite}) %>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('footer') -%>
</div>
